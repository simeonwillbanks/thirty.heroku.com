		<%= yield :layout %>
		
		<footer class="full">
  		<% unless controller.action_name == "logout" or controller.action_name == "login"  %>
			<p><small>
			  <%= link_to 'Home', :controller => 'home', :action => 'index' %> |
			  <%= link_to 'Tweets', tweets_path %> | 
        <%= link_to 'Users', users_path %> | 
			  <a href="http://twitter.com/ShitIm30Sumptin">Twitter Stream</a> |
			  <%= link_to 'Logout', :controller => 'home', :action => 'logout' %>
			</small></p>
  		<% end %>
		</footer>
		
	</div>
</body>
</html>