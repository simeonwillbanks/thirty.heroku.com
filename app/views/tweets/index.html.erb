<% 
@body_class = "page-tables"
%>

<h1>Listing tweets</h1>

<table border="1">
  <tr>
    <th>Written by</th>
    <th>Text</th>
    <th>Published</th>
    <th>Delete</th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%=h tweet.user.name %></td>
    <td><%=h tweet.text %></td>
    <td><%=h tweet.published %></td>
    <!--
    <td><%= link_to 'Show', tweet %></td>
    <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
    -->
    <td>
      <% if session[:user_id] == tweet.user_id or session[:user_is_admin] == true %>
      <%= link_to 'Destroy', tweet, :confirm => 'Are you sure?', :method => :delete %>
      <% end %>
    </td>
    
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tweet', new_tweet_path %>